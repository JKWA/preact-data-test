{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "amd",
    "lib": ["esnext", "dom", "esnext.asynciterable"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxImportSource": "preact",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
